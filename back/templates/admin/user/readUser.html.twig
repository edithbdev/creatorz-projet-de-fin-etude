{% extends 'base.html.twig' %}

{% block title %}utilisateur
	{{ user.email }}
{% endblock %}

{% block body %}
	<h1>Utilisateur :
		{{ user.email }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
		</tbody>
	</table>
	{% if is_granted('USER_EDIT', user) %}
	<button class="btn mb-5 redirect"><a class="redirect" href="{{ path("admin_user_edit", {id: user.id}) }}" class="action">Modifier</a></button>
	<button class="btn mb-5 redirect"><a href="{{ path('admin_userAll_browse') }}">Retour</a></button>

	{% endif %}
	<br>
	{% if is_granted('USER_DELETE', user) %}

		<form class="d-inline" method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Etes-vous sÃ»re de vouloir supprimer cet utilisateur ?');">
			<button class="alert alert-danger mt-2">Supprimer</button>
			<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">

		</form>

	{% endif %}
{% endblock %}
